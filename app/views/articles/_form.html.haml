= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2- pluralize (@article.errors.count, "error")
      %ul
        = @article.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :text
    = f.text_field :text
  %p
    = f.submit 


