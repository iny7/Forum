= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2- pluralize (@post.errors.count, "error")
      %ul
        = @post.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    %label{:for => "title"} 标题
    %input.form-control{:type => "text", name: 'title', placeholder: '请输入标题'}

  .form-group
    %label{:for => "content"} 内容
    %textarea.form-control{:type => "text", name: 'content'}

  .form-group
    %input.btn.btn-primary{:type => "submit"}


